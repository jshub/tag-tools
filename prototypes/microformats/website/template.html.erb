<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= title %></title>

<%
# Fiann: ActionView style helpers
require 'pathname'

def stylesheet_link_tag(href)
  path = Pathname.new("stylesheets/#{href}")
  "<link rel='stylesheet' href='#{path}' />"
end

def javascript_include_tag(href)
  path = Pathname.new("javascripts/#{href}")
  "<script type=\"text/javascript\" src=\"#{path}\" charset=\"UTF-8\"></script>"
end
%>

    <!-- YUI Core -->
    <%= stylesheet_link_tag 'yui.css'  %>
    <%= javascript_include_tag 'yahoo-dom-event.js'  %>

    <!-- YUI code highlighter -->
    <%= stylesheet_link_tag 'dpSyntaxHighlighter.css'  %>
    <%= javascript_include_tag 'dpSyntaxHighlighter.js'  %>
    <script type="text/javascript">
        YAHOO.util.Event.onDOMReady(function () {
          dp.SyntaxHighlighter.HighlightAll('code');
        });
    </script>

    <!-- jQuery -->
    <%= javascript_include_tag 'jquery.js'  %>

    <!-- Some custom ETL styling -->
    <style type="text/css">
      #pagetitle h1 { text-align: center; }
      table#form-data td { padding: 3px; }
      .errors {
        margin: 1em;
        border: 2px solid black;
        padding: 1em;
        background-color: mistyrose;
      }
      .errors p {
        margin-left: 2em;
      }
      .errors p.evidence {
        margin-left: 0em;
        font-family: monospace;
      }
      .caption {
        font-size: smaller;
      }
    </style>
  </head>
  <body class="yui-skin-sam">
    <div id="doc" class="yui-t2">
      <div id="hd">
        <br />
        <div id="pagetitle">
          <h1>Javascript tag technology tutorials</h1>
        </div>
      </div>
      <div id="bd">

        <!-- Navigation bar -->

