        </ul>
        </div>
        <!-- End table of contents -->

        <!-- Main body content -->
        <div id="yui-main">
          <div class="yui-b">

            <div id="promo">
              <table width="100%" border="0">
                <tr><td align="left"><h2>
                  <%= link_to( "&laquo; Prev", @prev, :title => 'Previous' ) if @prev %>
