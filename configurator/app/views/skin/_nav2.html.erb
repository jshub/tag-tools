      <div class="yui-b col2 nav2">
      
        <div class="yui-g top">
        
          <% 
            # tricky bg layout anc content options so use logic to show
            if controller.action_name == 'show'
          %>
          
          <div class="details">

            <div class="button download">
              <%= link_to "Download Production Tag", generate_production_tag_configuration_path %>
            </div>

            <% unless @tag_configuration.new_record? %>
              <p>
                <span class="label">Current version:</span>
                <strong><%= @tag_configuration.current_revision_number %></strong>
              </p>
            
              <p>
                <span class="label">Last revised:</span>
                  <strong><%= @tag_configuration.updated_at.to_date.to_s(:short) %></strong>
				  (<%= time_ago_in_words(@tag_configuration.updated_at).gsub('less than ', '') %> ago)
              </p>
            
              <p>
                <%= link_to 'View history', tag_configuration_revisions_path(:tag_configuration_id => @tag_configuration.id) %> | 
                <%= link_to "Download debug version", generate_debug_tag_configuration_path %>
              </p>
            <% end %>

            <% if @tag_configuration.new_record? %>
              <p>
                View history | <%= link_to "Download debug version", generate_debug_tag_configuration_path %>
              </p>
            <% end %>
            
          </div>
            
          <% end %>
          <% 
            if controller.action_name == 'new' || controller.action_name == 'edit'
          %>

            <h2>Tips:</h2>
            <ul class="tips">
              <li>
                Use the comments section to make notes about the purpose of this tag, e.g. which domain, site or server it is going to be hosted on.
              </li>
            </ul>

          <% end %>
          
          <% 
            if controller.action_name == 'index'
          %>          

          <% end %>          
          
        </div>
        <div class="yui-g bottom">
        
        <% if !@tag_configuration.new_record? %>
        
          <% 
            if controller.action_name == 'show'
          %>

            <h2>Your other configurations</h2>
            
            <table>
              <thead />
              <tbody>
              <% if @saved_configurations %>
                <% for config in @saved_configurations %>
                  <tr class="<%= cycle('row-odd', 'row-even') %>">
                    <td class="config_name"><%= link_to config.name, config %></td>
                    <td>
                      <div class="yui-g">
                        <div class="yui-u first">
                          <div class="icon edit" title="Edit"><%= link_to 'Edit', edit_tag_configuration_path(config) %></div>
                        </div>
                        <div class="yui-u">
                          <div class="icon delete" title="Delete"><%= link_to 'Delete', config, :confirm => 'Are you sure?', :method => :delete %></div>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                  <tr class="<%= cycle('row-odd', 'row-even') %>">
                    <td colspan="2">None</td>
                  </tr>              
              <% end %>            
              </tbody>
              </table>

              <div class="button new"><%= link_to 'Create a new configuration', new_tag_configuration_path %></div>


          <% end %>
          <% 
            if controller.action_name == 'edit'
          %>


            <% end %>

          <% end %>

        </div>
      </div>