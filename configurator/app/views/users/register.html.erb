<h1>Create your account</h1>

<% form_for @user, :url => register_path do |f| %>
<%= f.error_messages %>
<br />
<fieldset>
  <%= render :partial => "form", :object => f %>
  <p>
    <%= f.submit "Register" %>
  </p>
</fieldset>
<% end %>
<p>
  Or <%= link_to 'log in now', :login %> if you already have an account
</p>
