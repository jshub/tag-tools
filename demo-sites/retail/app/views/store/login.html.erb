<h1>Your account</h1>
<p>Please log in to complete your purchase</p>
<% form_tag({ :action => "login" }, { :name => "basket" }) do %>
<%= hidden_field_tag "original_uri", params[:original_uri] %>
<p>
  <%= radio_button_tag "usertype", "registered", true %>
  <label for="usertype_registered" class="right">I am a returning customer and my details are:</label>
</p>
<p>
  <label>Username:</label>
  <%= text_field_tag( "username", "", :size => "30" ) %>
</p>
<p>
  <label>Password:</label>
  <%= password_field_tag( "password", "", :size => "12" ) %>
</p>
<p>
  <%= radio_button_tag "usertype", "new", false, :disabled => true %>
  <label for="usertype_new" class="right">I am a new customer and I want to register now.</label>
</p> 
<p>
  <button id="login">Log in</button>
</p>
<% end %>
